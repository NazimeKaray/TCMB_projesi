@{
    var response= ViewBag.Exchanges;
    var m = Model as ExchangesViewModel;
}
<article>
    <form action="/Exchanges/Exchanges" method="post">
        <div class="row">
            <div class="col-sm-4">
                Tarih
            </div>
            <div class="col-sm-8">
                Tur
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                 <div class="input-group date" data-onload-datetimepicker='{"locale": "cs", "format": "D. M. YYYY"}'>
                    <input id="iDate" type="text" class="form-control" value="" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                    </span>
                </div>
            </div>
            <div class="col-sm-4">
                <select  id="iCurrency" class="form-control">
                    <option value="USD">USD</option>
                    <option value="AUD">AUD</option>
                    <option value="DKK">DKK</option>
                    <option value="EUR">EUR</option>
                    <option value="GBP">GBP</option>
                    <option value="CHF">CHF</option>
                    <option value="SEK">SEK</option>
                    <option value="CAD">CAD</option>
                    <option value="KWD">KWD</option>
                    <option value="NOK">NOK</option>
                    <option value="SAR">SAR</option>
                    <option value="JPY">JPY</option>
                </select>
            </div>
            <div class="col-sm-4">
                <button type="submit" class="btn btn-primary">
                    Cevir
                </button>
            </div>
        </div>
    </form>
</article>



